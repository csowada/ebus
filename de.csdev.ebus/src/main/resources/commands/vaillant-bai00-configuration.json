            "get": {
                "master": [
                    {"type": "static", "default": "0D 09 04"}
                ],
                "slave": [
                    {"type": "template-block"}
                ]
            },
            "set": {
                "master": [
                    {"type": "static", "default": "0E 09 04"},
                    {"type": "template-block"}
                ]
            }
        },

